    use_frameworks!
    platform :osx, "10.13"
    project 'Gureum.xcodeproj'
    pod 'cdebug'
    pod 'FoundationExtension', '~> 2.0.0'
    pod 'Fabric'
    pod 'Crashlytics'
end
